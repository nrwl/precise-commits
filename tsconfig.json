{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": true,
    "removeComments": true,
    "sourceMap": false,
    "pretty": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./lib",
    "declaration": true,
    "types": [
      "node"
    ],
    "lib": [
      "es2016"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}